# Supabase Configuration
# Get these values from your Supabase project settings:
# 1. Go to https://supabase.com/dashboard
# 2. Select your project
# 3. Go to Settings > API

# Supabase Project URL (required for client-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anon/Public Key (required for client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (required for server-side admin operations)
# WARNING: Keep this secret! Never expose in client-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase URL (server-side)
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase JWT Secret
SUPABASE_JWT_SECRET=your_jwt_secret

# Database Connection URLs
# Get these from Settings > Database > Connection string

# Connection pooling URL (recommended for serverless)
SUPABASE_POSTGRES_URL=postgres://postgres.your-project-ref:your-password@aws-region.pooler.supabase.com:6543/postgres?sslmode=require&supa=base-pooler.x

# Direct connection URL (non-pooling)
SUPABASE_POSTGRES_URL_NON_POOLING=postgres://postgres.your-project-ref:your-password@aws-region.pooler.supabase.com:5432/postgres?sslmode=require

# Prisma-specific connection URL
SUPABASE_POSTGRES_PRISMA_URL=postgres://postgres.your-project-ref:your-password@aws-region.pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true

# Database credentials
SUPABASE_POSTGRES_USER=postgres
SUPABASE_POSTGRES_PASSWORD=your_database_password
SUPABASE_POSTGRES_HOST=db.your-project-ref.supabase.co
SUPABASE_POSTGRES_DATABASE=postgres

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key
